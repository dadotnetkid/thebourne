@using System.Web.UI.WebControls
@using thebourne.Models
@model thebourne.Models.ReservationViewModel
<div class="row">
    <div class="col-lg-4">
        @{
            Html.DevExpress().ComboBoxFor(m => m.UserId, settings =>
            {
                settings.Properties.TextField = "FullName";
                settings.Properties.ValueField = "Id";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Customer";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
            }).BindList(new TheBournEntity().AspNetUsers.ToList()).GetHtml();
        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().ComboBoxFor(m => m.SeatId, settings =>
            {
                settings.Properties.TextField = "TableName";
                settings.Properties.ValueField = "Id";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Seat";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
            }).BindList(new TheBournEntity().Seats.ToList()).GetHtml();
        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().DateEditFor(m => m.ReservationDate, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Reservation Date";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
            }).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.AmountPaid, settings =>
            {
 
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Payment Amount";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
                
            }).GetHtml();
        }
    </div>
   
</div>
<div class="row margin-top-10">
    <div class="col-lg-12">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSave";
                settings.Text = "Save";
                settings.ClientSideEvents.Click = "function(s,e){ReservationGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ClientSideEvents.Click = "function(s,e){ReservationGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>